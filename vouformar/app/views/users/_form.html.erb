<%= bootstrap_form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<!-- <div class="field"> 
    <!%= f.label :registration %><br>
    <!%= f.number_field :registration %>
  </div> -->
  <%= f.text_field :name, :class=>"form-control", :placeholder=>"Nome", :label=> "Nome"%>     
    <%= f.text_field :last_name, :class=>"form-control", :placeholder=>"Sobrenome", :label=> "Sobrenome"%>
    <%= f.text_field :cpf_attr, :class=>"form-control", :placeholder=>"CPF", :label=> "CPF"%>
    <%= f.email_field :email, :class=>"form-control", :placeholder=>"Email", :label=> "Email" %>
    <%= f.fields_for :address_attributes do |addres| %>
      <%= addres.text_field :cep, :class=>"form-control", :placeholder=>"CEP", :label=> "CEP"%>
      <%= addres.text_field :uf, :class=>"form-control", :placeholder=>"UF", :label=> "UF"%>
      <%= addres.text_field :public_place, :class=>"form-control", :placeholder=>"Endereço", :label=> "Endereço"%>
      <%= addres.text_field :city, :class=>"form-control", :placeholder=>"Cidade", :label=> "Cidade"%>
    <% end %>
    <%= f.password_field :password, :class=>"form-control", :placeholder=>"Senha", :label=> "Senha" %>
    <%= f.password_field :password_confirmation, :class=>"form-control", :placeholder=>"Confirmar Senha", :label=> "Confirmar Senha" %>
    <br>
    <%= f.submit "Enviar", :class=> "btn btn-lg btn-primary btn-block" %>
    </br>
<% end %>
