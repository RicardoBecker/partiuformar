<!-- BASIC FORM ELELEMNTS -->
<div class="row mt">
   <div class="col-lg-12">
      <div class="form-panel">
         <h4 class="mb"><i class="fa fa-angle-right"></i> Informações dos Usuários</h4>
         <form class="form-horizontal style-form" method="get">
            <div class="form-group">
               <label class="col-lg-2 col-sm-2 control-label">Matrícula</label>
               <div class="col-lg-10">
                  <p class="form-control-static"><%= @user.registration %></p>
               </div>
            </div>
         </form>
         <form class="form-horizontal style-form" method="get">
            <div class="form-group">
               <label class="col-lg-2 col-sm-2 control-label">Nome</label>
               <div class="col-lg-10">
                  <p class="form-control-static"><%= @user.name %></p>
               </div>
            </div>
         </form>
         <form class="form-horizontal style-form" method="get">
            <div class="form-group">
               <label class="col-lg-2 col-sm-2 control-label">Sobrenome</label>
               <div class="col-lg-10">
                  <p class="form-control-static"><%= @user.last_name %></p>
               </div>
            </div>
         </form>
         <form class="form-horizontal style-form" method="get">
            <div class="form-group">
               <label class="col-lg-2 col-sm-2 control-label">Semestre atual</label>
               <div class="col-lg-10">
                  <p class="form-control-static"><%= @user.current_semester %></p>
               </div>
            </div>
         </form>
         <form class="form-horizontal style-form" method="get">
            <div class="form-group">
               <label class="col-lg-2 col-sm-2 control-label">Ano de ingresso</label>
               <div class="col-lg-10">
                  <p class="form-control-static"><%= @user.year_registration %></p>
               </div>
            </div>
         </form>                           
         <form class="form-horizontal style-form" method="get">
            <div class="form-group">
               <label class="col-lg-2 col-sm-2 control-label">E-mail</label>
               <div class="col-lg-10">
                  <p class="form-control-static"><%= @user.email %></p>
               </div>
            </div>
         </form>  
         <form class="form-horizontal style-form" method="get">
            <a href="<%= edit_user_path %>"><button type="button" class="btn btn-primary"> Editar </button></a>
            <%= link_to  "Deletar Perfil", { action: :destroy, id: @user.id }, method: :delete, data: { confirm: 'Deletar permanentemente seu perfil?' }, :class => "btn btn-danger active"%>
          </form>  
      </div>
   </div>
   <!-- col-lg-12-->       
</div>
<!-- /row -->